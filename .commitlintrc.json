{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [
      2,
      "always",
      [
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "type-case": [
      2,
      "always",
      "pascal-case"
    ],
    "type-empty": [
      2,
      "never"
    ],
    "type-enum": [
      2,
      "always",
      [
        "Fix",
        "Update",
        "New",
        "Breaking",
        "Docs",
        "Build",
        "Upgrade",
        "Chore"
      ]
    ]
  }
}